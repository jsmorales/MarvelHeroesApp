<?xml version="1.0"?>

    <RelativeLayout tools:background="#504a4a"
    tools:context=".HeroDetailFragment"
    android:layout_height="wrap_content"
    android:layout_width="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <TextView android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:textStyle="normal|bold"
        android:textColor="@color/colorAccent"
        android:textSize="24sp"
        tools:text="Hulk"
        android:id="@+id/heroDetailTitleTextView"
        android:layout_centerHorizontal="true"
        android:layout_alignParentTop="true"
        android:textAlignment="center"/>

    <LinearLayout
        android:id="@+id/baseLinearLayout"
        android:layout_width="match_parent"
        android:layout_height="300dp"
        android:layout_below="@id/heroDetailTitleTextView"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="30dp"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/heroDetailThumbnailTextView"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:adjustViewBounds="true"
            android:scaleType="fitCenter"
            app:srcCompat="@color/colorPrimaryDark" />

    </LinearLayout>

    <TextView
        android:id="@+id/heroDetailCopyrightTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginLeft="8dp"
        android:layout_marginBottom="72dp"
        android:text="@string/copyright_marvel"
        android:textColor="@color/colorAccent"
        android:textSize="14sp"
        tools:text="Copyright Marvel" />

    <TextView android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:textColor="@color/colorAccent"
        tools:text="Nobody messes with the Hulk"
        android:id="@+id/heroDetailDescriptionTextView"
        android:layout_below="@+id/baseLinearLayout"
        android:layout_margin="8dp"/>

</RelativeLayout>